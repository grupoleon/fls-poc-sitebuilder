# =============================================================================
# FLS POC Site Builder - Docker Compose Override (Secrets Template)
# =============================================================================
# INSTRUCTIONS:
#   1. Copy this file: cp docker-compose.override.yml.example docker-compose.override.yml
#   2. Fill in your actual values
#   3. NEVER commit docker-compose.override.yml to git
#
# Variable names match EXACTLY what Kinsta uses in their dashboard.
# =============================================================================

version: '3.8'

services:
  sitebuilder:
    environment:
      # =========================================================================
      # GOOGLE OAUTH (Kinsta naming convention)
      # =========================================================================
      # Get these from Google Cloud Console > APIs & Services > Credentials
      - client_id=YOUR_CLIENT_ID.apps.googleusercontent.com
      - client_secret=GOCSPX-your-secret-here
      - redirect_uri=http://localhost:8080/php/login.php
      - allowed_domain=frontlinestrategies.co

      # =========================================================================
      # SSH KEY FOR KINSTA DEPLOYMENTS
      # =========================================================================
      # Generate once: ssh-keygen -t rsa -b 4096 -f deploy_key -N ""
      # Add deploy_key.pub to Kinsta: https://my.kinsta.com/account/ssh-keys
      # Encode private key: cat deploy_key | base64 -w0
      - SSH_PRIVATE_KEY=LS0tLS1CRUdJTi...base64-encoded-private-key...

      # =========================================================================
      # KINSTA CONNECTION
      # =========================================================================
      - KINSTA_HOST=146.148.59.197
      - KINSTA_PORT=47807
      - KINSTA_API_TOKEN=your-kinsta-api-token

      # =========================================================================
      # GITHUB
      # =========================================================================
      - GITHUB_TOKEN=ghp_your-github-personal-access-token

      # =========================================================================
      # BITBUCKET (if used - Kinsta variable)
      # =========================================================================
      # - BB_NAME=your-bitbucket-name
